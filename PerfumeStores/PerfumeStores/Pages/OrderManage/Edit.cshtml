@page
@model PerfumeStores.Pages.OrderManage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <label>Customer</label>
                <input asp-for="Order.CustomerId" class="form-control" asp-items="ViewBag.CustomerId" readonly></input>
                <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>CreateDate</label>
                <input asp-for="Order.CreateDate" class="form-control" readonly/>
                <span asp-validation-for="Order.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Discount</label>
                <input asp-for="Order.CounpId" class="form-control" readonly />
                <span asp-validation-for="Order.CounpId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Total</label>
                <input asp-for="Order.Total" class="form-control" readonly />
                <span asp-validation-for="Order.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderStatus" class="control-label"></label>
                <input asp-for="Order.OrderStatus" class="form-control" />
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsPaid" /> @Html.DisplayNameFor(model => model.Order.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
