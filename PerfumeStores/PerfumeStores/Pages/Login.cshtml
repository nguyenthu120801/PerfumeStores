@page
@model PerfumeStores.Pages.LoginModel
@{
    Layout = "";
    ViewData["Title"] = "Login";
    var messLogin = ViewData["Error"];
    var messRegis = ViewData["ErrorRegis"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PerfumeStores</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form asp-page-handler="register" method="post">
                <h1>Create Account</h1>
                <span>Use your email for registration</span>
                <input type="text" asp-for="RegisterDTO.Username" placeholder="Username" required/>
                <input type="email" asp-for="RegisterDTO.Email" placeholder="Email" required />
                <input type="password" asp-for="RegisterDTO.Password" placeholder="Password" required />
                @if (messRegis != null)
                {
                    <span>@messRegis</span>
                }
                <button type="submit">Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-page-handler="login" method="post">
                <h1>Sign in</h1>
                <span>Use your account</span>
                <input type="text" asp-for="LoginDTO.Username" placeholder="Username" required />
                <input type="password" asp-for="LoginDTO.Password" placeholder="Password" required />
                @if (messLogin != null)
                {
                    <span>@messLogin</span>
                }
                <a href="#">Forgot your password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/login.js"></script>

</body>
</html>