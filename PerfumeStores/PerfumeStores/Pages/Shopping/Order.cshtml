@page
@using PerfumeStores.Core.Models;
@model PerfumeStores.Pages.Shopping.OrderModel
@{
    var order = ViewData["Order"] as IEnumerable<Order>;
}
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>OrderID</th>
                                <th>OrderDate</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (order != null)
                            {
                                @foreach (var item in order)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <h5>@item.OrderId</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.CreateDate</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.OrderDetails.First().ShippingAddress</h5>
                                        </td>
                                        <td class="shoping__cart__item">
                                            <h5>@item.OrderStatus</h5>
                                        </td>
                                        <td class="shoping__cart__total">
                                            $@item.Total
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            @if (item.OrderStatus.Equals("Wait for confirmation"))
                                            {
                                                <span asp-page-handler="Delete" asp-route-id="@item.OrderId" class="icon_close"></span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>